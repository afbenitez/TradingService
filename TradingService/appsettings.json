{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  
  // Database Configuration
  // DEFAULT: PostgreSQL (persistent storage)
  // CHANGE TO true FOR IN-MEMORY DATABASE (data lost on restart)
  "UseInMemoryDatabase": false,
  
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=TradingServiceDb;Username=postgres;Password=postgres;",
    "RabbitMQ": "amqp://guest:guest@localhost:5672"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "Exchange": "trading_exchange",
    "Queue": "trades"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/trading-service-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
